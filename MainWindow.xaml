<Window x:Class="rawinator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rawinator"
        mc:Ignorable="d"
        Title="RAWinator: a perfectly broken photo editor"
        Height="750"
        Width="1300"
        FontFamily="Consolas"
        PreviewKeyDown="MainWindow_PreviewKeyDown">
    <Window.Resources>
        <local:PlusSignValueConverter x:Key="PlusSignValueConverter"/>
        <local:ProgressConverter x:Key="ProgressConverter" />
    </Window.Resources>

	<Grid Background="Black">
        <DockPanel>
            <Menu DockPanel.Dock="Top" Background="Black" Foreground="White" FontFamily="Consolas">
                <MenuItem Header="_File">
                    <MenuItem Header="_Import..."
                              Click="Menu_File_Open_Click"/>
                    <MenuItem Header="E_xport..."
                              Click="Menu_File_Save_Click"/>
                    <MenuItem Header="_Exit"
                              Click="Menu_File_Exit_Click"/>
                </MenuItem>
                <MenuItem Header="_Edit">
                    <MenuItem Header="_Undo"
                              Click="Menu_Edit_Undo_Click"/>
                    <MenuItem Header="_Redo"
                              Click="Menu_Edit_Redo_Click"/>
                </MenuItem>
                <MenuItem Header="_Help">
                    <MenuItem Header="_About..."
                              Click="Menu_Help_About_Click"/>
                </MenuItem>
            </Menu>
        </DockPanel>

        <TabControl x:Name="App_TabControl"
					Margin="0,20,0,0"
                    SelectionChanged="App_TabControl_SelectionChanged"
					Background="Black"
					BorderBrush="#2a2a2a">

	        <TabItem Header="Library"
	                 x:Name="Tabs_Library"
	                 Background="Black"
	                 Foreground="White">
                <Grid Background="Black">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="1" />
                        <ColumnDefinition Width="300"
                                          MinWidth="150" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- List of images -->
                    <Grid Grid.Row="0" Grid.Column="0">
                        <ListBox x:Name="Library_Image_Grid"
                                 ItemsSource="{Binding ImportedImages.Ordered, RelativeSource={RelativeSource AncestorType=Window}}"
                                 SelectedItem="{Binding CurrentImage, Mode=TwoWay, RelativeSource={RelativeSource AncestorType=Window}}"
                                 SelectionMode="Extended"
                                 SelectionChanged="Library_Image_Grid_SelectionChanged"
                                 KeyDown="Library_Image_Grid_KeyDown"
                                 HorizontalContentAlignment="Center"
                                 VerticalContentAlignment="Top"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 Margin="10,10,0,0"
                                 Background="Black"
                                 Foreground="White"
                                 BorderThickness="0">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel IsItemsHost="True"
                                               Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate DataType="{x:Type local:RawImage}">
                                    <StackPanel Margin="8"
                                                Width="120">
                                        <Image Source="{Binding SmallThumbnail}"
                                               Width="100"
                                               Height="100"
                                               Stretch="Uniform"/>
                                        <TextBlock Text="{Binding Filename}"
                                                   TextAlignment="Center"
                                                   TextTrimming="CharacterEllipsis"
                                                   Margin="0,4,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <!-- Centered message when no images -->
                        <TextBlock Text="Use the &quot;Import&quot; button to begin..."
                                   Foreground="White"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   TextAlignment="Center"
                                   IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility"
                                            Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ImportedImages.Count, RelativeSource={RelativeSource AncestorType=Window}}"
                                                     Value="0">
                                            <Setter Property="Visibility"
                                                    Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>

                    <GridSplitter Grid.Row="0"
                                  Grid.Column="1"
                                  Grid.RowSpan="2"
                                  Width="1"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch"
                                  Background="#2a2a2a"
                                  ResizeBehavior="PreviousAndNext"
                                  ResizeDirection="Columns"/>

                    <!-- Thumbnail and metadata -->
                    <Grid Grid.Row="0"
                          Grid.Column="2"
                          VerticalAlignment="Top">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="200"
                                           MinHeight="50"/>
                            <RowDefinition Height="1"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid>
                            <Image Name="Library_Image_Thumbnail"
                                   Stretch="Uniform"
                                   Width="Auto"
                                   Height="Auto"
                                   Grid.Row="0"/>
                            <!-- Message when no image selected -->
                            <TextBlock Text="[No thumbnail found]"
                                       Foreground="White"
                                       FontSize="14"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       TextAlignment="Center"
                                       IsHitTestVisible="False">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility"
                                                Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CurrentImage, RelativeSource={RelativeSource AncestorType=Window}}"
                                                         Value="{x:Null}">
                                                <Setter Property="Visibility"
                                                        Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>

                        <GridSplitter Grid.Row="1"
                                      Height="1"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch"
                                      Background="#2a2a2a"
                                      ResizeBehavior="PreviousAndNext"
                                      ResizeDirection="Rows"/>

                        <ScrollViewer x:Name="Library_Image_Metadata_Scroll"
                                      VerticalScrollBarVisibility="Auto"
                                      Grid.Row="2"
                                      Margin="0,0,0,10">
                            <StackPanel x:Name="Library_Image_Metadata_Panel"
                                        Orientation="Vertical"
                                        Margin="10,10,10,0"
                                        VerticalAlignment="Top"
                                        HorizontalAlignment="Left"/>
                        </ScrollViewer>
                    </Grid>

                    <!-- Import progress bar -->
                    <ProgressBar x:Name="Library_Import_ProgressBar"
                                 Grid.Row="1"
                                 Grid.Column="0"
                                 Margin="10,0,10,0"
                                 Height="20"
                                 Visibility="Visible"
                                 Minimum="0"
                                 Maximum="1"
                                 Background="Black"
                                 BorderBrush="#4a4a4a"/>
                    <TextBlock x:Name="Library_Import_Status"
                               Grid.Row="1"
                               Grid.Column="0"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Visibility="Collapsed"
                               Foreground="White">
	                    <TextBlock.Text>
		                    <MultiBinding Converter="{StaticResource ProgressConverter}">
			                    <Binding ElementName="Library_Import_ProgressBar"
			                             Path="Value"/>
			                    <Binding ElementName="Library_Import_ProgressBar"
			                             Path="Maximum"/>
		                    </MultiBinding>
	                    </TextBlock.Text>
                    </TextBlock>

	                <!-- Import/export buttons -->
                    <Grid Grid.Column="2" Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

	                    <Button Content="Import..."
	                            x:Name="Library_Import_Button"
	                            Click="Library_Import_Button_Click"
	                            Height="30"
                                Grid.Column="0"
	                            FontWeight="Bold"
                                Margin="10,0,5,10"/>

	                    <Button Content="Export..."
                                IsEnabled="False"
	                            x:Name="Library_Export_Button"
	                            Click="Library_Export_Button_Click"
	                            Height="30"
	                            Grid.Column="1"
	                            FontWeight="Bold"
                                Margin="5,0,10,10"/>
                    </Grid>
                </Grid>
            </TabItem>


            <TabItem Header="View"
                     x:Name="Tabs_View"
                     KeyDown="Tabs_View_KeyDown"
                     IsEnabled="{Binding HasImageSelected}">
                <Grid Background="Black">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="1" />
                        <RowDefinition Height="80" MaxHeight="500" MinHeight="40" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="1" />
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="1" />
                        <ColumnDefinition Width="300" MinWidth="150" />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">

                    </Grid>

                    <GridSplitter Grid.Column="1"
	                              Width="1"
	                              HorizontalAlignment="Stretch"
	                              VerticalAlignment="Stretch"
	                              Background="#2a2a2a"
	                              ResizeBehavior="PreviousAndNext"
	                              ResizeDirection="Columns"/>

					<!-- Full-sized JPEG preview -->
                    <Image x:Name="View_Image"
                           Grid.Row="0"
                           Grid.Column="2"
                           Stretch="Uniform"/>

                    <GridSplitter Grid.Column="3"
	                              Width="1"
	                              HorizontalAlignment="Stretch"
	                              VerticalAlignment="Stretch"
	                              Background="#2a2a2a"
	                              ResizeBehavior="PreviousAndNext"
	                              ResizeDirection="Columns"/>

                    <!-- Detailed metadata -->
	                <ScrollViewer Grid.Column="4">
	                    <Grid>
	                        <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
		                        <RowDefinition Height="Auto"/>
	                            <RowDefinition Height="*"/>
	                        </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0"
                                       Text="Metadata"
                                       FontWeight="Bold"
                                       FontSize="16"
                                       Margin="12,10,0,12"
                                       Foreground="White"/>
                            <StackPanel Grid.Row="1"
	                                    x:Name="View_Metadata_StackPanel"
	                                    Margin="12,0,0,0"
	                                    VerticalAlignment="Top"/>
	                            <Expander Grid.Row="2"
	                                  x:Name="View_AllMetadata_Expander"
	                                  Header="All metadata"
	                                  Margin="12,8,0,0"
	                                  IsExpanded="False" Foreground="White">
	                                <StackPanel x:Name="View_AllMetadata_StackPanel"/>
	                            </Expander>
	                    </Grid>
	                </ScrollViewer>

                    <GridSplitter Grid.Row="1"
                                  Grid.ColumnSpan="5"
	                              Height="1"
	                              HorizontalAlignment="Stretch"
	                              VerticalAlignment="Stretch"
	                              Background="#2a2a2a"
	                              ResizeBehavior="PreviousAndNext"
	                              ResizeDirection="Rows"/>

                    <!-- LrC-like horizontal image list -->
                    <ListBox x:Name="View_Image_List"
                             Grid.Row="2"
                             Grid.ColumnSpan="5"
                             ItemsSource="{Binding ImportedImages.Ordered, RelativeSource={RelativeSource AncestorType=Window}}"
                             SelectedItem="{Binding CurrentImage, Mode=TwoWay, RelativeSource={RelativeSource AncestorType=Window}}"
                             SelectionChanged="View_Image_List_SelectionChanged"
                             ScrollViewer.HorizontalScrollBarVisibility="Visible"
                             ScrollViewer.VerticalScrollBarVisibility="Disabled"
                             Height="Auto"
                             BorderThickness="0"
                             Background="Black"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Bottom"
                             Margin="0,0,0,0"
                             PreviewMouseWheel="View_Image_List_PreviewMouseWheel">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Image Source="{Binding SmallThumbnail}" Height="Auto" Stretch="Uniform" Margin="5"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </TabItem>


            <TabItem Header="Develop"
                     x:Name="Tabs_Develop"
                     IsEnabled="{Binding HasImageSelected}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200" MinWidth="100"/>
                        <ColumnDefinition Width="1"/>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="1"/>
                        <ColumnDefinition Width="300" MinWidth="150"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left panel - presets and quick settings -->
                    <Grid Grid.Column="0"
                          Grid.RowSpan="2"
                          Margin="10,10,10,0"
                          Background="Black">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <ScrollViewer Grid.Row="0"
                                      VerticalScrollBarVisibility="Auto"
                                      Background="Transparent">
                        </ScrollViewer>

                        <!-- Quick sliders panel -->
                        <StackPanel x:Name="Develop_Sliders_Panel_Quick"
                                    Orientation="Vertical"
                                    Margin="0,5,0,5"
                                    Grid.Row="1">
                            <Grid Margin="0,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0"
                                            Orientation="Vertical"
                                            Margin="0,0,5,5">
                                    <ToggleButton
                                        x:Name="Develop_Toggle_Enhance"
                                        Style="{StaticResource ToggleButtonAsButtonStyle}"
                                        Content="Enhance"
                                        IsChecked="{Binding CurrentImage.ProcessParams.UseEnhance, Mode=OneWay, RelativeSource={RelativeSource AncestorType=Window}}"
                                        Click="Develop_Toggle_Special_Click"/>
                                    <ToggleButton
                                        x:Name="Develop_Toggle_AutoLevel"
                                        Style="{StaticResource ToggleButtonAsButtonStyle}"
                                        Content="Auto level"
                                        Margin="0"
                                        IsChecked="{Binding CurrentImage.ProcessParams.UseAutoLevel, Mode=OneWay, RelativeSource={RelativeSource AncestorType=Window}}"
                                        Click="Develop_Toggle_Special_Click"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1"
                                            Orientation="Vertical"
                                            Margin="5,0,0,0">
                                    <ToggleButton
                                        x:Name="Develop_Toggle_Denoise"
                                        Style="{StaticResource ToggleButtonAsButtonStyle}"
                                        Content="Denoise"
                                        IsChecked="{Binding CurrentImage.ProcessParams.UseDenoise, Mode=OneWay, RelativeSource={RelativeSource AncestorType=Window}}"
                                        Click="Develop_Toggle_Special_Click"/>
                                    <ToggleButton
                                        x:Name="Develop_Toggle_AutoGamma"
                                        Style="{StaticResource ToggleButtonAsButtonStyle}"
                                        Content="Auto gamma"
                                        Margin="0"
                                        IsChecked="{Binding CurrentImage.ProcessParams.UseAutoGamma, Mode=OneWay, RelativeSource={RelativeSource AncestorType=Window}}"
                                        Click="Develop_Toggle_Special_Click"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <!-- Crop/Resize mode panel -->
                        <StackPanel x:Name="Develop_Sliders_Panel_Crop"
                                    Orientation="Vertical"
                                    Margin="0,5,0,0"
                                    Grid.Row="1"
                                    Visibility="Collapsed">
	                        <Grid Margin="0,0,0,0">
		                        <Grid.ColumnDefinitions>
			                        <ColumnDefinition Width="*" />
			                        <ColumnDefinition Width="*" />
		                        </Grid.ColumnDefinitions>
		                        <StackPanel Grid.Column="0"
		                                    Orientation="Vertical"
		                                    Margin="0,0,5,0">

			                        <TextBlock Text="Aspect ratio"
			                                   VerticalAlignment="Center"/>

			                        <Grid Margin="0,6,0,10" HorizontalAlignment="Stretch">
				                        <Grid.ColumnDefinitions>
					                        <ColumnDefinition Width="*" />
					                        <ColumnDefinition Width="Auto" />
					                        <ColumnDefinition Width="*" />
				                        </Grid.ColumnDefinitions>
				                        <TextBox x:Name="Develop_TextBox_AspectWidth"
				                                 Grid.Column="0"
				                                 Margin="0,0,3,0"
				                                 Background="Black"
				                                 Foreground="White"
				                                 BorderBrush="White"
				                                 CaretBrush="White"
				                                 Padding="4"
                                                 Height="22"
				                                 HorizontalAlignment="Stretch"
				                                 VerticalAlignment="Center"
				                                 HorizontalContentAlignment="Center"
				                                 VerticalContentAlignment="Center"/>
				                        <TextBlock Text=":"
				                                   Grid.Column="1"
				                                   VerticalAlignment="Center"
				                                   Foreground="White"
				                                   FontSize="16"
				                                   Margin="0,0,0,0"/>
				                        <TextBox x:Name="Develop_TextBox_AspectHeight"
				                                 Grid.Column="2"
				                                 Margin="3,0,0,0"
				                                 Background="Black"
				                                 Foreground="White"
				                                 BorderBrush="White"
				                                 CaretBrush="White"
				                                 Padding="4"
                                                 Height="22"
				                                 HorizontalAlignment="Stretch"
				                                 VerticalAlignment="Center"
				                                 HorizontalContentAlignment="Center"
				                                 VerticalContentAlignment="Center"/>
			                        </Grid>

                                    <Button Content="Flip X"
                                            x:Name="Develop_Button_FlipX"
                                            Height="22"
                                            FontWeight="Bold"
                                            Margin="0,0,0,10"
                                            Click="Develop_Button_FlipX_Click"/>
		                        </StackPanel>

                                <StackPanel Grid.Column="1"
		                                    Orientation="Vertical"
		                                    Margin="5,0,0,0">
                                    <TextBlock Text=" "
	                                           VerticalAlignment="Center"
	                                           Margin="0,0,0,6"/>
                                    <Button Content="Rotate"
	                                        x:Name="Develop_Button_Rotate"
	                                        Height="22"
	                                        FontWeight="Bold"
	                                        Margin="0,0,0,10"
	                                        Click="Develop_Button_Rotate_Click"/>
	                                <Button Content="Flip Y"
	                                        x:Name="Develop_Button_FlipY"
	                                        Height="22"
	                                        FontWeight="Bold"
	                                        Margin="0,0,0,10"
	                                        Click="Develop_Button_FlipY_Click"/>

                                </StackPanel>
	                        </Grid>
                        </StackPanel>

                        <!-- Crop/Resize trigger -->
                        <ToggleButton Content="Toggle crop mode"
                                        x:Name="Develop_Toggle_Crop"
                                        Grid.Row="2"
                                        Style="{StaticResource ToggleButtonAsButtonStyle}"
                                        Height="30"
                                        Checked="Develop_Toggle_Crop_Checked"
                                        Unchecked="Develop_Toggle_Crop_Unchecked"/>
                    </Grid>

                    <GridSplitter Grid.Column="1"
                                  Grid.RowSpan="2"
                                  Width="1"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch"
                                  Background="#2a2a2a"
                                  ResizeBehavior="PreviousAndNext"
                                  ResizeDirection="Columns"/>

                    <!-- Actual rendered RAW -->
                    <Grid x:Name="Develop_Image_Container" Grid.Row="0" Grid.Column="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" ClipToBounds="True">
                        <Image x:Name="Develop_Image"
                               RenderTransformOrigin="0.5,0.5"
                               MouseLeftButtonDown="Develop_Image_MouseLeftButtonDown"
                               MouseLeftButtonUp="Develop_Image_MouseLeftButtonUp"
                               MouseMove="Develop_Image_MouseMove"
                               Stretch="Uniform"
                               MouseWheel="Develop_Image_MouseWheel" />
                        <Canvas x:Name="Develop_Image_OverlayCanvas"
                                IsHitTestVisible="True"
                                Background="Transparent"
                                Visibility="Collapsed"
                                Panel.ZIndex="10"/>

                        <StackPanel x:Name="Develop_ZoomPanel"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Bottom"
                                    Margin="5"
                                    Panel.ZIndex="20">
                            <Button x:Name="ZoomIn_Button" Content="+" Width="40" Margin="5,0" Click="ZoomIn_Button_Click"/>
                            <Button x:Name="ZoomReset_Button" Content="Reset" Width="60" Margin="5,0" Click="ZoomReset_Button_Click"/>
                            <Button x:Name="ZoomOut_Button" Content="-" Width="40" Margin="5,0" Click="ZoomOut_Button_Click"/>
                        </StackPanel>
                    </Grid>

                    <GridSplitter Grid.Column="3"
                                  Grid.RowSpan="2"
                                  Width="1"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch"
                                  Background="#2a2a2a"
                                  ResizeBehavior="PreviousAndNext"
                                  ResizeDirection="Columns"/>

                    <!-- Right panel - sliders for all adjustments -->
                    <Grid Grid.Row="0"
                          Grid.Column="4"
                          Grid.RowSpan="2"
                          Background="Black">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <ScrollViewer x:Name="Develop_Slider_Scroll"
                                      Grid.Row="0">
                            <StackPanel x:Name="Develop_Sliders_Panel"
                                        Orientation="Vertical">
                                <StackPanel x:Name="Develop_Sliders_Panel_Basic"
	                                    Orientation="Vertical"
	                                    Margin="10,5">
                                    <TextBlock Text="Basic adjustments"
	                                   Margin="0,0,0,8"
	                                   FontWeight="Bold"
	                                   FontSize="16"/>

                                    <!-- Exposure -->
                                    <Grid Margin="0,0,0,0">
                                        <TextBlock Text="Exposure"
	                                       Grid.Column="0"
	                                       VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding ElementName=Develop_Slider_Exposure, Path=Value, Converter={StaticResource PlusSignValueConverter}, ConverterParameter=2}"
	                                       Grid.Column="1"
	                                       HorizontalAlignment="Right"
	                                       VerticalAlignment="Center"/>
                                    </Grid>
                                    <Slider x:Name="Develop_Slider_Exposure"
	                                Minimum="-5"
	                                Maximum="5"
	                                Value="0"
	                                TickFrequency="0.1"
	                                ValueChanged="Develop_Slider_ValueChanged"
	                                Thumb.DragStarted="Develop_Slider_DragStarted"
	                                Thumb.DragCompleted="Develop_Slider_DragCompleted"
	                                IsSnapToTickEnabled="True"
	                                LargeChange="0.3"/>

                                    <!-- Brightness -->
                                    <Grid Margin="0,8,0,0">
                                        <TextBlock Text="Brightness"
	                                       Grid.Column="0"
	                                       VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding ElementName=Develop_Slider_Brightness, Path=Value, Converter={StaticResource PlusSignValueConverter}}"
	                                       Grid.Column="1"
	                                       HorizontalAlignment="Right"
	                                       VerticalAlignment="Center"/>
                                    </Grid>
                                    <Slider x:Name="Develop_Slider_Brightness"
	                                Minimum="-100"
	                                Maximum="100"
	                                Value="0"
	                                TickFrequency="1"
	                                ValueChanged="Develop_Slider_ValueChanged"
	                                Thumb.DragStarted="Develop_Slider_DragStarted"
	                                Thumb.DragCompleted="Develop_Slider_DragCompleted"
	                                IsSnapToTickEnabled="True"
	                                LargeChange="5"/>

                                    <!-- Contrast -->
                                    <Grid Margin="0,8,0,0">
                                        <TextBlock Text="Contrast"
		                                   Grid.Column="0"
		                                   VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding ElementName=Develop_Slider_Contrast, Path=Value, Converter={StaticResource PlusSignValueConverter}}"
		                                   Grid.Column="1"
		                                   HorizontalAlignment="Right"
		                                   VerticalAlignment="Center"/>
                                    </Grid>
                                    <Slider x:Name="Develop_Slider_Contrast"
	                                Minimum="-100"
	                                Maximum="100"
	                                Value="0"
	                                TickFrequency="1"
	                                ValueChanged="Develop_Slider_ValueChanged"
	                                Thumb.DragStarted="Develop_Slider_DragStarted"
	                                Thumb.DragCompleted="Develop_Slider_DragCompleted"
	                                IsSnapToTickEnabled="True"
	                                LargeChange="5"/>

                                    <!-- White Balance (Temp) -->
                                    <Grid Margin="0,8,0,0">
                                        <TextBlock Text="White Balance (Temp)"
	                                       Grid.Column="0"
	                                       VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding ElementName=Develop_Slider_WhiteBalance, Path=Value, Converter={StaticResource PlusSignValueConverter}}"
	                                       Grid.Column="1"
	                                       HorizontalAlignment="Right"
	                                       VerticalAlignment="Center"/>
                                    </Grid>
                                    <Slider x:Name="Develop_Slider_WhiteBalance"
	                                Minimum="-100"
	                                Maximum="100"
	                                Value="0"
	                                TickFrequency="1"
	                                ValueChanged="Develop_Slider_ValueChanged"
	                                Thumb.DragStarted="Develop_Slider_DragStarted"
	                                Thumb.DragCompleted="Develop_Slider_DragCompleted"
	                                IsSnapToTickEnabled="True"
	                                LargeChange="5"/>

                                    <!-- White Balance (Tint) -->
                                    <Grid Margin="0,8,0,0">
                                        <TextBlock Text="White Balance (Tint)"
	                                       Grid.Column="0"
	                                       VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding ElementName=Develop_Slider_WhiteBalanceTint, Path=Value, Converter={StaticResource PlusSignValueConverter}}"
	                                       Grid.Column="1"
	                                       HorizontalAlignment="Right"
	                                       VerticalAlignment="Center"/>
                                    </Grid>
                                    <Slider x:Name="Develop_Slider_WhiteBalanceTint"
	                                Minimum="-100"
	                                Maximum="100"
	                                Value="0"
	                                TickFrequency="1"
	                                ValueChanged="Develop_Slider_ValueChanged"
	                                Thumb.DragStarted="Develop_Slider_DragStarted"
	                                Thumb.DragCompleted="Develop_Slider_DragCompleted"
	                                IsSnapToTickEnabled="True"
	                                LargeChange="5"/>

                                    <!-- Highlights -->
                                    <Grid Margin="0,8,0,0">
                                        <TextBlock Text="Highlights"
	                                       Grid.Column="0"
	                                       VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding ElementName=Develop_Slider_Highlights, Path=Value, Converter={StaticResource PlusSignValueConverter}}"
	                                       Grid.Column="1"
