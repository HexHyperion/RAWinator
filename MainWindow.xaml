<Window x:Class="rawinator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rawinator"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="750"
        Width="1300">
    <Window.Resources>
        <local:PlusSignValueConverter x:Key="PlusSignValueConverter"/>
    </Window.Resources>
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_Open"
                              Click="Menu_File_Open_Click"/>
                    <MenuItem Header="_Save"
                              Click="Menu_File_Save_Click"/>
                    <MenuItem Header="_Exit"
                              Click="Menu_File_Exit_Click"/>
                </MenuItem>
                <MenuItem Header="_Edit">
                    <MenuItem Header="_Undo"
                              Click="Menu_Edit_Undo_Click"/>
                    <MenuItem Header="_Redo"
                              Click="Menu_Edit_Redo_Click"/>
                </MenuItem>
                <MenuItem Header="_Help">
                    <MenuItem Header="_About"
                              Click="Menu_Help_About_Click"/>
                </MenuItem>
            </Menu>
            <StackPanel></StackPanel>
        </DockPanel>
        <TabControl Margin="0,20,0,0">
            <TabItem Header="Library"
                     x:Name="Tabs_Library">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="350" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- List of images -->
                    <ListBox x:Name="Library_Image_Grid"
                             Grid.Row="0"
                             Grid.Column="0"
                             ItemsSource="{Binding importedImages, RelativeSource={RelativeSource AncestorType=Window}}"
                             SelectionMode="Extended"
                             SelectionChanged="Library_Image_Grid_SelectionChanged"
                             KeyDown="Library_Image_Grid_KeyDown"
                             HorizontalContentAlignment="Center"
                             VerticalContentAlignment="Top"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             Margin="10,10,0,10">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel IsItemsHost="True"
                                           Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="{x:Type local:RawImage}">
                                <StackPanel Margin="8"
                                            Width="120">
                                    <Image Source="{Binding SmallThumbnail}"
                                           Width="100"
                                           Height="100"
                                           Stretch="Uniform"/>
                                    <TextBlock Text="{Binding Filename}"
                                               TextAlignment="Center"
                                               TextTrimming="CharacterEllipsis"
                                               Margin="0,4,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Thumbnail and metadata -->
                    <StackPanel Grid.Row="0"
                                Grid.Column="1"
                                Margin="10"
                                VerticalAlignment="Top">
                        <Image Name="Library_Image_Thumbnail"
                               Stretch="Uniform"
                               Width="350"
                               Height="350"/>
                        <Label Name="Library_Image_Metadata"
                               VerticalAlignment="Top"/>
                    </StackPanel>

                    <!-- Import button -->
                    <Button Content="Import..."
                            Click="Library_Import_Click"
                            Height="30"
                            Width="100"
                            Grid.Row="1"
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            Margin="0,10,10,10"/>
                </Grid>
            </TabItem>
            <TabItem Header="View"
                     x:Name="Tabs_View">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Develop"
                     x:Name="Tabs_Develop">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>
                    <Image x:Name="Develop_Image"
                           Grid.Column="0"
                           Stretch="Uniform" />
                    <StackPanel Grid.Column="1"
                                Margin="10">
                        <!-- Exposure -->
                        <Grid Margin="0,0,0,0">
                            <TextBlock Text="Exposure"
                                       Grid.Column="0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding ElementName=Develop_Slider_Exposure, Path=Value, Converter={StaticResource PlusSignValueConverter}, ConverterParameter=2}"
                                       Grid.Column="1"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                        </Grid>
                        <Slider x:Name="Develop_Slider_Exposure"
                                Minimum="-5"
                                Maximum="5"
                                Value="0"
                                TickFrequency="0.1"
                                Thumb.DragCompleted="Develop_Slider_Changed"
                                TickPlacement="BottomRight"
                                IsSnapToTickEnabled="True"
                                LargeChange="0.3"/>

                        <!-- Brightness -->
                        <Grid Margin="0,0,0,0">
                            <TextBlock Text="Brightness"
                                       Grid.Column="0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding ElementName=Develop_Slider_Brightness, Path=Value, Converter={StaticResource PlusSignValueConverter}}"
                                       Grid.Column="1"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                        </Grid>
                        <Slider x:Name="Develop_Slider_Brightness"
                                Minimum="-100"
                                Maximum="100"
                                Value="0"
                                TickFrequency="1"
                                Thumb.DragCompleted="Develop_Slider_Changed"
                                TickPlacement="BottomRight"
                                IsSnapToTickEnabled="True"
                                LargeChange="5"/>

                        <!-- White Balance (Temp) -->
                        <Grid Margin="0,0,0,0">
                            <TextBlock Text="White Balance (Temp)"
                                       Grid.Column="0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding ElementName=Develop_Slider_WhiteBalance, Path=Value, Converter={StaticResource PlusSignValueConverter}}"
                                       Grid.Column="1"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                        </Grid>
                        <Slider x:Name="Develop_Slider_WhiteBalance"
                                Minimum="-90"
                                Maximum="90"
                                Value="0"
                                TickFrequency="1"
                                Thumb.DragCompleted="Develop_Slider_Changed"
                                TickPlacement="BottomRight"
                                IsSnapToTickEnabled="True"
                                LargeChange="5"/>

                        <!-- White Balance (Tint) -->
                        <Grid Margin="0,0,0,0">
                            <TextBlock Text="White Balance (Tint)"
                                       Grid.Column="0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding ElementName=Develop_Slider_WhiteBalanceTint, Path=Value, Converter={StaticResource PlusSignValueConverter}}"
                                       Grid.Column="1"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                        </Grid>
                        <Slider x:Name="Develop_Slider_WhiteBalanceTint"
                                Minimum="-90"
                                Maximum="90"
                                Value="0"
                                TickFrequency="1"
                                Thumb.DragCompleted="Develop_Slider_Changed"
                                TickPlacement="BottomRight"
                                IsSnapToTickEnabled="True"
                                LargeChange="5"/>

                        <!-- Contrast -->
                        <Grid Margin="0,0,0,0">
                            <TextBlock Text="Contrast"
                                       Grid.Column="0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding ElementName=Develop_Slider_Contrast, Path=Value, Converter={StaticResource PlusSignValueConverter}}"
                                       Grid.Column="1"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                        </Grid>
                        <Slider x:Name="Develop_Slider_Contrast"
                                Minimum="-100"
                                Maximum="100"
                                Value="0"
                                TickFrequency="1"
                                Thumb.DragCompleted="Develop_Slider_Changed"
                                TickPlacement="BottomRight"
                                IsSnapToTickEnabled="True"
                                LargeChange="5"/>

                        <!-- Highlights -->
                        <Grid Margin="0,0,0,0">
                            <TextBlock Text="Highlights"
                                       Grid.Column="0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding ElementName=Develop_Slider_Highlights, Path=Value, Converter={StaticResource PlusSignValueConverter}}"
                                       Grid.Column="1"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                        </Grid>
                        <Slider x:Name="Develop_Slider_Highlights"
                                Minimum="-100"
                                Maximum="100"
                                Value="0"
                                TickFrequency="1"
                                Thumb.DragCompleted="Develop_Slider_Changed"
                                TickPlacement="BottomRight"
                                IsSnapToTickEnabled="True"
                                LargeChange="5"/>

                        <!-- Shadows -->
                        <Grid Margin="0,0,0,0">
                            <TextBlock Text="Shadows"
                                       Grid.Column="0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding ElementName=Develop_Slider_Shadows, Path=Value, Converter={StaticResource PlusSignValueConverter}}"
                                       Grid.Column="1"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                        </Grid>
                        <Slider x:Name="Develop_Slider_Shadows"
                                Minimum="-100"
                                Maximum="100"
                                Value="0"
                                TickFrequency="1"
                                Thumb.DragCompleted="Develop_Slider_Changed"
                                TickPlacement="BottomRight"
                                IsSnapToTickEnabled="True"
                                LargeChange="5"/>

                        <!-- Saturation -->
                        <Grid Margin="0,0,0,0">
                            <TextBlock Text="Saturation"
                                       Grid.Column="0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding ElementName=Develop_Slider_Saturation, Path=Value, Converter={StaticResource PlusSignValueConverter}}"
                                       Grid.Column="1"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                        </Grid>
                        <Slider x:Name="Develop_Slider_Saturation"
                                Minimum="-100"
                                Maximum="100"
                                Value="0"
                                TickFrequency="1"
                                Thumb.DragCompleted="Develop_Slider_Changed"
                                TickPlacement="BottomRight"
                                IsSnapToTickEnabled="True"
                                LargeChange="5"/>

                        <!-- Hue -->
                        <Grid Margin="0,0,0,0">
                            <TextBlock Text="Hue"
                                       Grid.Column="0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding ElementName=Develop_Slider_Hue, Path=Value, Converter={StaticResource PlusSignValueConverter}}"
                                       Grid.Column="1"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                        </Grid>
                        <Slider x:Name="Develop_Slider_Hue"
                                Minimum="-180"
                                Maximum="180"
                                Value="0"
                                TickFrequency="1"
                                Thumb.DragCompleted="Develop_Slider_Changed"
                                TickPlacement="BottomRight"
                                IsSnapToTickEnabled="True"
                                LargeChange="5"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
