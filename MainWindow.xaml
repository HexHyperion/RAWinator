<Window x:Class="rawinator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rawinator"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="750"
        Width="1300"
        FontFamily="Consolas">
    <Window.Resources>
        <local:PlusSignValueConverter x:Key="PlusSignValueConverter"/>
        <local:ProgressConverter x:Key="ProgressConverter" />

        <Style TargetType="Button"
               x:Key="ButtonStyle">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="Black" />
            <Setter Property="BorderBrush" Value="White" />
            <Setter Property="Template">
		        <Setter.Value>
			        <ControlTemplate TargetType="{x:Type Button}">
                        <Border 
                            Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="1">
				            <ContentPresenter x:Name="MyContentPresenter" 
				                              Content="{TemplateBinding Content}"
				                              HorizontalAlignment="Center" 
				                              VerticalAlignment="Center" />
                        </Border>
			        </ControlTemplate>
		        </Setter.Value>
	        </Setter>

	        <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="BorderBrush" Value="#4a4a4a"/>
                    <Setter Property="Foreground" Value="#4a4a4a"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#aaa"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TabItem"
               x:Key="TabItemStyle">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="Black" />
            <Setter Property="Template">
		        <Setter.Value>
			        <ControlTemplate TargetType="TabItem">
				        <Border Name="TabBorder"
				                BorderThickness="1,1,1,0"
				                BorderBrush="Transparent">
                            <TextBlock Name="TabHeader"
                                       FontSize="14"
                                       Foreground="{TemplateBinding Foreground}">
                                <ContentPresenter x:Name="ContentSite"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"
                                                  ContentSource="Header"
                                                  Margin="10,2,2,10"/>
                            </TextBlock>
				        </Border>
				        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="TabHeader"
                                        Property="Foreground"
                                        Value="Gray"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="TabHeader"
                                        Property="Foreground"
                                        Value="White"/>
                                <Setter TargetName="TabHeader"
                                        Property="FontWeight"
                                        Value="Bold"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="TabHeader"
                                        Property="Foreground"
                                        Value="#3a3a3a"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="IsSelected" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="TabHeader"
                                        Property="Foreground"
                                        Value="#aaa"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
			        </ControlTemplate>
		        </Setter.Value>
	        </Setter>
        </Style>

        <Style x:Key="SliderTrackRepeatButtonStyle"
               TargetType="RepeatButton">
            <Setter Property="Background" Value="#aaa"/>
            <Setter Property="Height" Value="2"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border Background="{TemplateBinding Background}"
                                Height="{TemplateBinding Height}" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#aaa"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#aaa"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#aaa"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Slider"
               x:Key="SliderStyle">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Track x:Name="PART_Track"
                                   IsDirectionReversed="{TemplateBinding IsDirectionReversed}"
                                   Focusable="False">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="Slider.DecreaseLarge"
                                                  Style="{StaticResource SliderTrackRepeatButtonStyle}"
                                                  IsTabStop="False"/>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb x:Name="Thumb"
	                                       Background="White"
	                                       BorderBrush="Transparent"
	                                       BorderThickness="0"
	                                       Height="16"
	                                       Width="8"/>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="Slider.IncreaseLarge"
                                                  Style="{StaticResource SliderTrackRepeatButtonStyle}"
                                                  IsTabStop="False"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BlackMenuItemStyle" TargetType="MenuItem">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Black"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1">
                            <Grid>
                                <ContentPresenter ContentSource="Header"
                                                  RecognizesAccessKey="True"
                                                  Margin="8,4"/>
                                <Popup x:Name="PART_Popup"
                                       Placement="Bottom"
                                       IsOpen="{TemplateBinding IsSubmenuOpen}"
                                       AllowsTransparency="True"
                                       Focusable="False"
                                       PopupAnimation="Fade">
                                    <Border Background="Black"
                                            BorderBrush="#2a2a2a"
                                            BorderThickness="1"
                                            SnapsToDevicePixels="True"
                                            Padding="2"
                                            MinWidth="100">
                                        <StackPanel IsItemsHost="True"
                                                    KeyboardNavigation.DirectionalNavigation="Cycle"/>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Border"
                                        Property="Background"
                                        Value="#222"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#4a4a4a"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="MenuItem">
                        <Setter Property="Padding" Value="16,8"/>
                        <Setter Property="Height" Value="36"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>


    <Grid Background="Black">
        <DockPanel>
            <Menu DockPanel.Dock="Top" Background="Black" Foreground="White" FontFamily="Consolas">
                <MenuItem Header="_File" Style="{StaticResource BlackMenuItemStyle}">
                    <MenuItem Header="_Open"
                              Click="Menu_File_Open_Click"
                              Style="{StaticResource BlackMenuItemStyle}"/>
                    <MenuItem Header="_Save"
                              Click="Menu_File_Save_Click"
                              Style="{StaticResource BlackMenuItemStyle}"/>
                    <MenuItem Header="_Exit"
                              Click="Menu_File_Exit_Click"
                              Style="{StaticResource BlackMenuItemStyle}"/>
                </MenuItem>
                <MenuItem Header="_Edit" Style="{StaticResource BlackMenuItemStyle}">
                    <MenuItem Header="_Undo"
                              Click="Menu_Edit_Undo_Click"
                              Style="{StaticResource BlackMenuItemStyle}"/>
                    <MenuItem Header="_Redo"
                              Click="Menu_Edit_Redo_Click"
                              Style="{StaticResource BlackMenuItemStyle}"/>
                </MenuItem>
                <MenuItem Header="_Help" Style="{StaticResource BlackMenuItemStyle}">
                    <MenuItem Header="_About"
                              Click="Menu_Help_About_Click"
                              Style="{StaticResource BlackMenuItemStyle}"/>
                </MenuItem>
            </Menu>
        </DockPanel>

        <TabControl x:Name="App_TabControl"
					Margin="0,20,0,0"
                    SelectionChanged="App_TabControl_SelectionChanged"
					Background="Black"
					BorderBrush="#2a2a2a">

	        <TabItem Header="Library"
	                 x:Name="Tabs_Library"
	                 Background="Black"
	                 Foreground="White"
	                 Style="{StaticResource TabItemStyle}">
                <Grid Background="Black">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="1" />
                        <ColumnDefinition Width="300"
                                          MinWidth="150" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- List of images -->
                    <Grid Grid.Row="0" Grid.Column="0">
                        <ListBox x:Name="Library_Image_Grid"
                                 ItemsSource="{Binding ImportedImages, RelativeSource={RelativeSource AncestorType=Window}}"
                                 SelectionMode="Extended"
                                 SelectionChanged="Library_Image_Grid_SelectionChanged"
                                 KeyDown="Library_Image_Grid_KeyDown"
                                 HorizontalContentAlignment="Center"
                                 VerticalContentAlignment="Top"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 Margin="10,10,0,0"
                                 Background="Black"
                                 Foreground="White"
                                 BorderThickness="0">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel IsItemsHost="True"
                                               Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate DataType="{x:Type local:RawImage}">
                                    <StackPanel Margin="8"
                                                Width="120">
                                        <Image Source="{Binding SmallThumbnail}"
                                               Width="100"
                                               Height="100"
                                               Stretch="Uniform"/>
                                        <TextBlock Text="{Binding Filename}"
                                                   TextAlignment="Center"
                                                   TextTrimming="CharacterEllipsis"
                                                   Margin="0,4,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <!-- Centered message when no images -->
                        <TextBlock Text="Use the &quot;Import&quot; button to begin..."
                                   Foreground="White"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   TextAlignment="Center"
                                   IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility"
                                            Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ImportedImages.Count, RelativeSource={RelativeSource AncestorType=Window}}"
                                                     Value="0">
                                            <Setter Property="Visibility"
                                                    Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>

                    <GridSplitter Grid.Row="0"
                                  Grid.Column="1"
                                  Grid.RowSpan="2"
                                  Width="1"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch"
                                  Background="#2a2a2a"
                                  ResizeBehavior="PreviousAndNext"
                                  ResizeDirection="Columns"/>

                    <!-- Thumbnail and metadata -->
                    <Grid Grid.Row="0"
                          Grid.Column="2"
                          VerticalAlignment="Top">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="200"
                                           MinHeight="50"/>
                            <RowDefinition Height="1"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid>
                            <Image Name="Library_Image_Thumbnail"
                                   Stretch="Uniform"
                                   Width="Auto"
                                   Height="Auto"
                                   Grid.Row="0"/>
                            <!-- Message when no image selected -->
                            <TextBlock Text="[No thumbnail found]"
                                       Foreground="White"
                                       FontSize="14"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       TextAlignment="Center"
                                       IsHitTestVisible="False">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility"
                                                Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CurrentImage, RelativeSource={RelativeSource AncestorType=Window}}"
                                                         Value="{x:Null}">
                                                <Setter Property="Visibility"
                                                        Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>

                        <GridSplitter Grid.Row="1"
                                      Height="1"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch"
                                      Background="#2a2a2a"
                                      ResizeBehavior="PreviousAndNext"
                                      ResizeDirection="Rows"/>

                        <ScrollViewer x:Name="Library_Image_Metadata_Scroll"
                                      VerticalScrollBarVisibility="Auto"
                                      Grid.Row="2"
                                      Margin="0,0,0,10">
                            <StackPanel x:Name="Library_Image_Metadata_Panel"
                                        Orientation="Vertical"
                                        Margin="10,10,10,0"
                                        VerticalAlignment="Top"
                                        HorizontalAlignment="Left"/>
                        </ScrollViewer>
                    </Grid>

                    <!-- Import progress bar -->
                    <ProgressBar x:Name="Library_Import_ProgressBar"
                                 Grid.Row="1"
                                 Grid.Column="0"
                                 Margin="10,0,10,0"
                                 Height="20"
                                 Visibility="Visible"
                                 Minimum="0"
                                 Maximum="1"
                                 Background="Black"
                                 BorderBrush="#4a4a4a"/>
                    <TextBlock x:Name="Library_Import_Status"
                               Grid.Row="1"
                               Grid.Column="0"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Visibility="Collapsed"
                               Foreground="White">
	                    <TextBlock.Text>
		                    <MultiBinding Converter="{StaticResource ProgressConverter}">
			                    <Binding ElementName="Library_Import_ProgressBar"
			                             Path="Value"/>
			                    <Binding ElementName="Library_Import_ProgressBar"
			                             Path="Maximum"/>
		                    </MultiBinding>
	                    </TextBlock.Text>
                    </TextBlock>

	                <!-- Import/export buttons -->
                    <Grid Grid.Column="2" Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

	                    <Button Content="Import..."
	                            x:Name="Library_Import_Button"
	                            Click="Library_Import_Button_Click"
	                            Height="30"
                                Grid.Column="0"
	                            FontWeight="Bold"
                                Margin="10,0,5,10"
	                            Style="{StaticResource ButtonStyle}"/>

	                    <Button Content="Export..."
                                IsEnabled="False"
	                            x:Name="Library_Export_Button"
	                            Click="Library_Export_Button_Click"
	                            Height="30"
	                            Grid.Column="1"
	                            FontWeight="Bold"
                                Margin="5,0,10,10"
	                            Style="{StaticResource ButtonStyle}"/>
                    </Grid>
                </Grid>
            </TabItem>


            <TabItem Header="View"
                     x:Name="Tabs_View"
                     KeyDown="Tabs_View_KeyDown"
                     Style="{StaticResource TabItemStyle}"
                     IsEnabled="{Binding HasImageSelected}">
                <Grid Background="Black">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="1" />
                        <RowDefinition Height="80" MaxHeight="500" MinHeight="40" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="1" />
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="1" />
                        <ColumnDefinition Width="300" MinWidth="150" />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">

                    </Grid>

                    <GridSplitter Grid.Column="1"
	                              Width="1"
	                              HorizontalAlignment="Stretch"
	                              VerticalAlignment="Stretch"
	                              Background="#2a2a2a"
	                              ResizeBehavior="PreviousAndNext"
	                              ResizeDirection="Columns"/>

					<!-- Full-sized JPEG preview -->
                    <Image x:Name="View_Image"
                           Grid.Row="0"
                           Grid.Column="2"
                           Stretch="Uniform"/>

                    <GridSplitter Grid.Column="3"
	                              Width="1"
	                              HorizontalAlignment="Stretch"
	                              VerticalAlignment="Stretch"
	                              Background="#2a2a2a"
	                              ResizeBehavior="PreviousAndNext"
	                              ResizeDirection="Columns"/>

                    <!-- Detailed metadata -->
	                <ScrollViewer Grid.Column="4">
	                    <Grid>
	                        <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
		                        <RowDefinition Height="Auto"/>
	                            <RowDefinition Height="*"/>
	                        </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0"
                                       Text="Metadata"
                                       FontWeight="Bold"
                                       FontSize="16"
                                       Margin="12,10,0,12"
                                       Foreground="White"/>
                            <StackPanel Grid.Row="1"
	                                    x:Name="View_Metadata_StackPanel"
	                                    Margin="12,0,0,0"
	                                    VerticalAlignment="Top"/>
	                            <Expander Grid.Row="2"
	                                  x:Name="View_AllMetadata_Expander"
	                                  Header="All metadata"
	                                  Margin="12,8,0,0"
	                                  IsExpanded="False" Foreground="White">
	                                <StackPanel x:Name="View_AllMetadata_StackPanel"/>
	                            </Expander>
	                    </Grid>
	                </ScrollViewer>

                    <GridSplitter Grid.Row="1"
                                  Grid.ColumnSpan="5"
	                              Height="1"
	                              HorizontalAlignment="Stretch"
	                              VerticalAlignment="Stretch"
	                              Background="#2a2a2a"
	                              ResizeBehavior="PreviousAndNext"
	                              ResizeDirection="Rows"/>

                    <!-- LrC-like horizontal image list -->
                    <ListBox x:Name="View_Image_List"
                             Grid.Row="2"
                             Grid.ColumnSpan="5"
                             ItemsSource="{Binding ImportedImages, RelativeSource={RelativeSource AncestorType=Window}}"
                             SelectedItem="{Binding CurrentImage, Mode=TwoWay, RelativeSource={RelativeSource AncestorType=Window}}"
                             SelectionChanged="View_Image_List_SelectionChanged"
                             ScrollViewer.HorizontalScrollBarVisibility="Visible"
                             ScrollViewer.VerticalScrollBarVisibility="Disabled"
                             Height="Auto"
                             BorderThickness="0"
                             Background="Black"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Bottom"
                             Margin="0,0,0,0"
                             PreviewMouseWheel="View_Image_List_PreviewMouseWheel">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Image Source="{Binding SmallThumbnail}" Height="Auto" Stretch="Uniform" Margin="5"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </TabItem>


            <TabItem Header="Develop"
                     x:Name="Tabs_Develop"
                     Style="{StaticResource TabItemStyle}"
                     IsEnabled="{Binding HasImageSelected}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1"/>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="1"/>
                        <ColumnDefinition Width="300" MinWidth="150"/>
                    </Grid.ColumnDefinitions>

                    <!-- Placeholder, probably a preset selector or history in the future -->
                    <Grid Grid.Column="0"
                          Grid.RowSpan="2"
                          Margin="10">
                        <TextBlock Text="Presets"
                                   FontWeight="Bold"
                                   FontSize="16"/>
                    </Grid>

                    <GridSplitter Grid.Column="1"
                                  Grid.RowSpan="2"
                                  Width="1"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch"
                                  Background="#2a2a2a"
                                  ResizeBehavior="PreviousAndNext"
                                  ResizeDirection="Columns"/>

                    <!-- Actual rendered RAW -->
                    <Image x:Name="Develop_Image"
                           Grid.Row="0"
                           Grid.Column="2"
                           Stretch="Uniform" />

                    <GridSplitter Grid.Column="3"
                                  Grid.RowSpan="2"
                                  Width="1"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch"
                                  Background="#2a2a2a"
                                  ResizeBehavior="PreviousAndNext"
                                  ResizeDirection="Columns"/>

                    <!-- Sliders for all adjustments -->
                    <StackPanel x:Name="Develop_Sliders_Panel"
                                Grid.Row="0"
                                Grid.Column="4"
                                Grid.RowSpan="2"
                                Orientation="Vertical"
                                Margin="10">
                        <TextBlock Text="Adjustments"
                                   Margin="0,0,0,8"
                                   FontWeight="Bold"
                                   FontSize="16"/>

                        <!-- Exposure -->
                        <Grid Margin="0,0,0,0">
                            <TextBlock Text="Exposure"
                                       Grid.Column="0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding ElementName=Develop_Slider_Exposure, Path=Value, Converter={StaticResource PlusSignValueConverter}, ConverterParameter=2}"
                                       Grid.Column="1"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                        </Grid>
                        <Slider x:Name="Develop_Slider_Exposure"
                                Style="{StaticResource SliderStyle}"
                                Minimum="-5"
                                Maximum="5"
                                Value="0"
                                TickFrequency="0.1"
                                ValueChanged="Develop_Slider_ValueChanged"
                                Thumb.DragStarted="Develop_Slider_DragStarted"
                                Thumb.DragCompleted="Develop_Slider_DragCompleted"
                                IsSnapToTickEnabled="True"
                                LargeChange="0.3"/>

                        <!-- Brightness -->
                        <Grid Margin="0,8,0,0">
                            <TextBlock Text="Brightness"
                                       Grid.Column="0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding ElementName=Develop_Slider_Brightness, Path=Value, Converter={StaticResource PlusSignValueConverter}}"
                                       Grid.Column="1"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                        </Grid>
                        <Slider x:Name="Develop_Slider_Brightness"
                                Style="{StaticResource SliderStyle}"
                                Minimum="-100"
                                Maximum="100"
                                Value="0"
                                TickFrequency="1"
                                ValueChanged="Develop_Slider_ValueChanged"
                                Thumb.DragStarted="Develop_Slider_DragStarted"
                                Thumb.DragCompleted="Develop_Slider_DragCompleted"
                                IsSnapToTickEnabled="True"
                                LargeChange="5"/>

                        <!-- White Balance (Temp) -->
                        <Grid Margin="0,8,0,0">
                            <TextBlock Text="White Balance (Temp)"
                                       Grid.Column="0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding ElementName=Develop_Slider_WhiteBalance, Path=Value, Converter={StaticResource PlusSignValueConverter}}"
                                       Grid.Column="1"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                        </Grid>
                        <Slider x:Name="Develop_Slider_WhiteBalance"
                                Style="{StaticResource SliderStyle}"
                                Minimum="-90"
                                Maximum="90"
                                Value="0"
                                TickFrequency="1"
                                ValueChanged="Develop_Slider_ValueChanged"
                                Thumb.DragStarted="Develop_Slider_DragStarted"
                                Thumb.DragCompleted="Develop_Slider_DragCompleted"
                                IsSnapToTickEnabled="True"
                                LargeChange="5"/>

                        <!-- White Balance (Tint) -->
                        <Grid Margin="0,8,0,0">
                            <TextBlock Text="White Balance (Tint)"
                                       Grid.Column="0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding ElementName=Develop_Slider_WhiteBalanceTint, Path=Value, Converter={StaticResource PlusSignValueConverter}}"
                                       Grid.Column="1"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                        </Grid>
                        <Slider x:Name="Develop_Slider_WhiteBalanceTint"
                                Style="{StaticResource SliderStyle}"
                                Minimum="-90"
                                Maximum="90"
                                Value="0"
                                TickFrequency="1"
                                ValueChanged="Develop_Slider_ValueChanged"
                                Thumb.DragStarted="Develop_Slider_DragStarted"
                                Thumb.DragCompleted="Develop_Slider_DragCompleted"
                                IsSnapToTickEnabled="True"
                                LargeChange="5"/>

                        <!-- Contrast -->
                        <Grid Margin="0,8,0,0">
                            <TextBlock Text="Contrast"
                                       Grid.Column="0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding ElementName=Develop_Slider_Contrast, Path=Value, Converter={StaticResource PlusSignValueConverter}}"
                                       Grid.Column="1"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                        </Grid>
                        <Slider x:Name="Develop_Slider_Contrast"
                                Style="{StaticResource SliderStyle}"
                                Minimum="-100"
                                Maximum="100"
                                Value="0"
                                TickFrequency="1"
                                ValueChanged="Develop_Slider_ValueChanged"
                                Thumb.DragStarted="Develop_Slider_DragStarted"
                                Thumb.DragCompleted="Develop_Slider_DragCompleted"
                                IsSnapToTickEnabled="True"
                                LargeChange="5"/>

                        <!-- Highlights -->
                        <Grid Margin="0,8,0,0">
                            <TextBlock Text="Highlights"
                                       Grid.Column="0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding ElementName=Develop_Slider_Highlights, Path=Value, Converter={StaticResource PlusSignValueConverter}}"
                                       Grid.Column="1"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                        </Grid>
                        <Slider x:Name="Develop_Slider_Highlights"
                                Style="{StaticResource SliderStyle}"
                                Minimum="-100"
                                Maximum="100"
                                Value="0"
                                TickFrequency="1"
                                ValueChanged="Develop_Slider_ValueChanged"
                                Thumb.DragStarted="Develop_Slider_DragStarted"
                                Thumb.DragCompleted="Develop_Slider_DragCompleted"
                                IsSnapToTickEnabled="True"
                                LargeChange="5"/>

                        <!-- Shadows -->
                        <Grid Margin="0,8,0,0">
                            <TextBlock Text="Shadows"
                                       Grid.Column="0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding ElementName=Develop_Slider_Shadows, Path=Value, Converter={StaticResource PlusSignValueConverter}}"
                                       Grid.Column="1"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                        </Grid>
                        <Slider x:Name="Develop_Slider_Shadows"
                                Style="{StaticResource SliderStyle}"
                                Minimum="-100"
                                Maximum="100"
                                Value="0"
                                TickFrequency="1"
                                ValueChanged="Develop_Slider_ValueChanged"
                                Thumb.DragStarted="Develop_Slider_DragStarted"
                                Thumb.DragCompleted="Develop_Slider_DragCompleted"
                                IsSnapToTickEnabled="True"
                                LargeChange="5"/>

                        <!-- Saturation -->
                        <Grid Margin="0,8,0,0">
                            <TextBlock Text="Saturation"
                                       Grid.Column="0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding ElementName=Develop_Slider_Saturation, Path=Value, Converter={StaticResource PlusSignValueConverter}}"
                                       Grid.Column="1"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                        </Grid>
                        <Slider x:Name="Develop_Slider_Saturation"
                                Style="{StaticResource SliderStyle}"
                                Minimum="-100"
                                Maximum="100"
                                Value="0"
                                TickFrequency="1"
                                ValueChanged="Develop_Slider_ValueChanged"
                                Thumb.DragStarted="Develop_Slider_DragStarted"
                                Thumb.DragCompleted="Develop_Slider_DragCompleted"
                                IsSnapToTickEnabled="True"
                                LargeChange="5"/>

                        <!-- Hue -->
                        <Grid Margin="0,8,0,0">
                            <TextBlock Text="Hue"
                                       Grid.Column="0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding ElementName=Develop_Slider_Hue, Path=Value, Converter={StaticResource PlusSignValueConverter}}"
                                       Grid.Column="1"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                        </Grid>
                        <Slider x:Name="Develop_Slider_Hue"
                                Style="{StaticResource SliderStyle}"
                                Minimum="-180"
                                Maximum="180"
                                Value="0"
                                TickFrequency="1"
                                ValueChanged="Develop_Slider_ValueChanged"
                                Thumb.DragStarted="Develop_Slider_DragStarted"
                                Thumb.DragCompleted="Develop_Slider_DragCompleted"
                                IsSnapToTickEnabled="True"
                                LargeChange="5"/>
                    </StackPanel>

                    <!-- Progress bar active when the adjustments are being computed -->
                    <ProgressBar x:Name="Develop_Process_ProgressBar"
                                 IsIndeterminate="False"
                                 Grid.Row="1"
                                 Grid.Column="2"
                                 Height="10"
                                 Margin="10,0,10,0"
                                 Background="Black"
                                 BorderBrush="#4a4a4a"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
